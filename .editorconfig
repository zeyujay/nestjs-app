root = true #不再向上查找.editorconfig
# *表示全部文件；可设置：[*.{js,py}][*.html]单独为不同的文件类型设置
# 主要就是以下6个配置
[*]
#编码
charset = utf-8
#缩进方式
indent_style = space
#缩进空格数
indent_size = 2
#换行符lf
end_of_line = lf
#是否删除行尾的空格
trim_trailing_whitespace = true
#是否在文件的最后插入一个空行
insert_final_newline = true

# markdown结尾空格不能删，不然完犊子了
[*.md]
trim_trailing_whitespace = false
[Makefile]
indent_style = tab
